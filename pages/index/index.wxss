.channel-list {
  height: 80rpx;
  display: flex;
  justify-content: space-around;
  background: #6399FF;
}
.channel-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.channel-bar {
  font-size: 40rpx;
  line-height: 56rpx;
}
.channel-underline {
  height: 10rpx;
  width: 40rpx;
  margin-top: 5rpx;
  background-color: #D8D8D8;
}
.news-wrapper {
  display: flex;
  flex-direction: column;
}
.news-top {
  height: 280rpx;
  margin: 2rpx;
  border: 1rpx solid #D8D8D8
}
.news-panel {
  display: flex;
  height: 250rpx;
  margin: 10rpx;
  border-bottom: 2rpx solid #D8D8D8
}

.news-panel-text {
  font-size: 40rpx;
  line-height: 56rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 240rpx;
  width: 65%;
  margin: 5rpx;
}
.news-panel-source {
  font-size: 30rpx;
  line-height: 42rpx;
}
.news-panel-picture {
  display: flex;
  height: 240rpx;
  width: 35%;
  margin: 5rpx;
}