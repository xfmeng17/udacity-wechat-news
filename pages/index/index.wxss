.channel-list {
  display: flex;
  height: 60rpx;
  background: #6399FF;
}

.channel-item {
  display: flex;
  width: 120rpx;
  flex-shrink: 0;
  flex-direction: column;
  align-items: center;
}

.channel-title {
  font-size: 30rpx;
  line-height: 42rpx;
}

.channel-underline {
  height: 5rpx;
  width: 40rpx;
  margin-top: 5rpx;
  background-color: #D8D8D8;
}

.news-wrapper {
  display: flex;
  flex-direction: column;
}

.news-top {
  height: 280rpx;
  margin: 2rpx;
  border: 1rpx solid #D8D8D8
}

.news-panel {
  display: flex;
  height: 200rpx;
  margin: 2rpx;
  border-bottom: 1rpx solid #D8D8D8
}

.news-panel-text {
  font-size: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 180rpx;
  width: 65%;
  margin: 5rpx;
}

.news-panel-picture {
  display: flex;
  height: 180rpx;
  width: 35%;
  margin: 5rpx;
}